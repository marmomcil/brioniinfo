<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.foi.air.brioniinfo.FragmentInformacije"
    android:background="#C2C3FF">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/naslovInformacije"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp"
        android:text="@string/FragmentInformacije"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#06004A"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:text="@string/infoTxt"
        android:textSize="18sp"
        android:layout_below="@+id/naslovInformacije"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:textColor="#000000"/>

</RelativeLayout>
