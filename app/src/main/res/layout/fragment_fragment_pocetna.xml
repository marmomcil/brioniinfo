<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.foi.air.brioniinfo.FragmentPocetna"
    android:background="@drawable/oldbus"
    android:alpha=".80">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="@string/FragmentPocetna"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#06004A"/>

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/imageView"
        android:layout_gravity="right|top"
        android:src="@drawable/logo"
        android:contentDescription="@string/contentDescriptionImageLogo"/>

</FrameLayout>
